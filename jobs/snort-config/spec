---
name: snort-config
provides:
- name: snort-config
  type: config
  properties:
  - snort.rules
- name: snort-connection
  type: conn

consumes:
- name: snort_connection
  type: conn
  optional: true

properties:
  snort.rules:
    description: "Custom snort rules"
  snort.suppress_rules:
    description: "rules to suppress"
  snort_connection:
    description: ip of instance to supress
